@model B2Handpicked.DomainModel.Employee

@{
    ViewData["Title"] = "Edit employee";
}

<h4>Edit employee</h4>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Name">
        <label class="mdl-textfield__label" asp-for="Name"></label>
        <span asp-validation-for="Name" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Gmail">
        <label class="mdl-textfield__label" asp-for="Gmail"></label>
        <span asp-validation-for="Gmail" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="PhoneNumber">
        <label class="mdl-textfield__label" asp-for="PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div>
        <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="HasAccess">
            <input type="checkbox" asp-for="HasAccess" class="mdl-switch__input">
            <span class="mdl-switch__label">@Html.DisplayNameFor(model => model.HasAccess)</span>
        </label>
    </div>
    <input type="hidden" asp-for="OAuth" />
    <br><br>
    <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" />
</form>
