@model B2Handpicked.DomainModel.Deal

<ul class="demo-list-two mdl-list">
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon"></i>
            <span>@Html.DisplayNameFor(model => model.Title)</span>
            <span class="mdl-list__item-sub-title">@Model.Title</span>
        </span>
    </li>
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon">attach_money</i>
            <span>@Html.DisplayNameFor(model => model.Value)</span>
            <span class="mdl-list__item-sub-title">@Html.DisplayFor(model => model.Value)</span>
        </span>
    </li>
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon">event</i>
            <span>@Html.DisplayNameFor(model => model.Deadline)</span>
            <span class="mdl-list__item-sub-title">@Model.Deadline.ToLongDateString()</span>
        </span>
    </li>
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon"></i>
            <span>@Html.DisplayNameFor(model => model.Percentage)</span>
            <span class="mdl-list__item-sub-title">@Model.Percentage</span>
        </span>
    </li>
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon">business</i>
            <span>Customer</span>
            <span class="mdl-list__item-sub-title">@(Model.Customer?.Name ?? "None")</span>
        </span>
    </li>
    <li class="mdl-list__item mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-icon"></i>
            <span>Label</span>
            <span class="mdl-list__item-sub-title">@(Model.Customer?.Label?.Name ?? "None")</span>
        </span>
    </li>
</ul>