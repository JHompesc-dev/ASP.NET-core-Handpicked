@model B2Handpicked.DomainModel.Label

@{
    ViewData["Title"] = "Edit label";
}

<h4>Edit label</h4>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Name">
        <label class="mdl-textfield__label" asp-for="Name"></label>
        <span asp-validation-for="Name" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Token">
        <label class="mdl-textfield__label" asp-for="Token"></label>
        <span asp-validation-for="Token" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" />
</form>