@model B2Handpicked.UI.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h4>Register</h4>

<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Username">
        <label class="mdl-textfield__label" asp-for="Username"></label>
        <span asp-validation-for="Username" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Email">
        <label class="mdl-textfield__label" asp-for="Email"></label>
        <span asp-validation-for="Email" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="PhoneNumber">
        <label class="mdl-textfield__label" asp-for="PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" asp-for="Password">
        <label class="mdl-textfield__label" asp-for="Password"></label>
        <span asp-validation-for="Password" class="mdl-textfield__error"></span>
    </div>
    <br><br>
    <input type="submit" value="Register" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" />
</form>